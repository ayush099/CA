<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/cardViewCitizen"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        card_view:cardCornerRadius="0dp">


        <LinearLayout
            android:id="@+id/llParent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_left_card_elements"
                    android:layout_marginLeft="@dimen/margin_left_card_elements"
                    android:layout_marginTop="@dimen/margin_between_card_elements"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Prefix :"
                            android:textColor="@color/dark_gray"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_prefix"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_right_card_elements"
                            android:layout_marginLeft="@dimen/margin_right_card_elements"
                            android:layout_weight="1"

                            android:textSize="15sp"

                            />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ac No. :"
                            android:textColor="@color/dark_gray"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_ac_no"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_right_card_elements"
                            android:layout_marginLeft="@dimen/margin_right_card_elements"
                            android:layout_weight="1"
                            android:textSize="15sp" />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_left_card_elements"
                    android:layout_marginLeft="@dimen/margin_left_card_elements"
                    android:layout_marginTop="@dimen/margin_between_card_elements"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ac Name :"
                            android:textColor="@color/dark_gray"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_ac_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_right_card_elements"
                            android:layout_marginLeft="@dimen/margin_right_card_elements"
                            android:layout_weight="1"
                            android:textSize="15sp" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Ps No. :"
                            android:textColor="@color/dark_gray"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_psNo"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_right_card_elements"
                            android:layout_marginLeft="@dimen/margin_right_card_elements"
                            android:layout_weight="1"

                            android:textSize="15sp"

                            />


                    </LinearLayout>


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_left_card_elements"
                    android:layout_marginLeft="@dimen/margin_left_card_elements"
                    android:layout_marginTop="@dimen/margin_between_card_elements"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:text="Ps Name :"
                        android:textColor="@color/dark_gray"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_ps_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_right_card_elements"
                        android:layout_marginLeft="@dimen/margin_right_card_elements"
                        android:textSize="15sp" />


                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_left_card_elements"
                    android:layout_marginLeft="@dimen/margin_left_card_elements"
                    android:layout_marginTop="@dimen/margin_between_card_elements"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Section No. :"
                            android:textColor="@color/dark_gray"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_section_no"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_right_card_elements"
                            android:layout_marginLeft="@dimen/margin_right_card_elements"
                            android:layout_weight="1"

                            android:textSize="15sp"

                            />


                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">


                        <TextView
                            android:layout_width="0dp"

                            android:layout_height="wrap_content"
                            android:layout_weight="3"
                            android:text="Voter Ser Id :"
                            android:textColor="@color/dark_gray"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_right_card_elements"
                            android:layout_marginLeft="@dimen/margin_right_card_elements"
                            android:layout_weight="2"

                            android:textSize="15sp"

                            />


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_left_card_elements"
                    android:layout_marginLeft="@dimen/margin_left_card_elements"
                    android:layout_marginTop="@dimen/margin_between_card_elements"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/cardview_elements_width"

                            android:layout_height="wrap_content"
                            android:text="Section Name :"
                            android:textColor="@color/dark_gray"
                            android:textSize="15sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_section_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_right_card_elements"
                            android:layout_marginLeft="@dimen/margin_right_card_elements"
                            android:layout_weight="1"

                            android:textSize="15sp"

                            />


                    </LinearLayout>


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_left_card_elements"
                    android:layout_marginLeft="@dimen/margin_left_card_elements"
                    android:layout_marginTop="@dimen/margin_between_card_elements"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="@dimen/cardview_elements_width"

                        android:layout_height="wrap_content"
                        android:text="Voter Id :"
                        android:textColor="@color/dark_gray"
                        android:textSize="15sp"
                        android:textStyle="bold" />

                    <TextView

                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_right_card_elements"
                        android:layout_marginLeft="@dimen/margin_right_card_elements"
                        android:layout_weight="1"

                        android:textSize="15sp"

                        />

                </LinearLayout>


                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@android:color/darker_gray" />


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_left_card_elements"
                android:layout_marginLeft="@dimen/margin_left_card_elements"
                android:layout_marginTop="@dimen/margin_between_card_elements"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Serial No :"
                        android:textColor="@color/dark_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_voter_ser_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_right_card_elements"
                        android:layout_marginLeft="@dimen/margin_right_card_elements"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:text=""

                        android:textSize="12sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.5"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Voter Id :"
                        android:textColor="@color/dark_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_voter_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_right_card_elements"
                        android:layout_marginLeft="@dimen/margin_right_card_elements"
                        android:fontFamily="@font/roboto"
                        android:text=""
                        android:textSize="12sp" />


                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_left_card_elements"
                android:layout_marginLeft="@dimen/margin_left_card_elements"
                android:layout_marginTop="@dimen/margin_between_card_elements"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Name :"
                        android:textColor="@color/dark_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_right_card_elements"
                        android:layout_marginLeft="@dimen/margin_right_card_elements"
                        android:layout_weight="1"

                        android:fontFamily="@font/roboto"

                        android:textSize="12sp" />


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_left_card_elements"
                android:layout_marginLeft="@dimen/margin_left_card_elements"
                android:layout_marginTop="@dimen/margin_between_card_elements"
                android:orientation="horizontal">


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Father/Husband:"
                        android:textColor="@color/dark_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_father_name"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_right_card_elements"
                        android:layout_marginLeft="@dimen/margin_right_card_elements"
                        android:layout_weight="1"

                        android:fontFamily="@font/roboto"

                        android:textSize="12sp" />


                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_left_card_elements"
                android:layout_marginLeft="@dimen/margin_left_card_elements"
                android:layout_marginTop="@dimen/margin_between_card_elements"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Gender :"
                        android:textColor="@color/dark_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_gender"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_right_card_elements"
                        android:layout_marginLeft="@dimen/margin_right_card_elements"
                        android:layout_weight="1"

                        android:fontFamily="@font/roboto"

                        android:textSize="12sp" />

                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">


                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Age :"
                        android:textColor="@color/dark_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_right_card_elements"
                        android:layout_marginLeft="@dimen/margin_right_card_elements"
                        android:layout_weight="1"

                        android:fontFamily="@font/roboto"

                        android:textSize="12sp" />


                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">


                    <TextView
                        android:layout_width="wrap_content"

                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="House No. :"
                        android:textColor="@color/dark_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tv_house_no"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/margin_right_card_elements"
                        android:layout_marginLeft="@dimen/margin_right_card_elements"
                        android:layout_weight="1"

                        android:fontFamily="@font/roboto"

                        android:textSize="12sp" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:id="@+id/llSurveyedData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_left_card_elements"
                android:layout_marginLeft="@dimen/margin_left_card_elements"
                android:layout_marginTop="@dimen/margin_between_card_elements"
                android:orientation="horizontal"
                android:visibility="visible">


                <LinearLayout
                    android:layout_width="64dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:text="Mobile Number 1 : "
                            android:textColor="@color/dark_gray"
                            android:textSize="12sp"

                            />

                        <TextView
                            android:id="@+id/tvMobileNumber1"
                            android:layout_width="80dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_right_card_elements"
                            android:layout_marginLeft="@dimen/margin_right_card_elements"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto"
                            android:text="9999999999"

                            android:textSize="12sp" />

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:layout_weight="1"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:text="Mobile Number 2 : "
                            android:textColor="@color/dark_gray"
                            android:textSize="12sp" />

                        <TextView
                            android:id="@+id/tvMobileNumber2"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/margin_right_card_elements"
                            android:layout_marginLeft="@dimen/margin_right_card_elements"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto"
                            android:textSize="12sp" />

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Priority : "
                        android:textColor="@color/dark_gray"
                        android:textSize="12sp" />

                    <TextView
                        android:id="@+id/tvPriority"
                        android:layout_width="40dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:textSize="12sp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_left_card_elements"
                android:layout_marginLeft="@dimen/margin_left_card_elements"
                android:layout_marginTop="@dimen/margin_between_card_elements"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="@dimen/cardview_elements_width"

                    android:layout_height="wrap_content"
                    android:text="DOB :"
                    android:textColor="@color/dark_gray"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_dob"

                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_right_card_elements"
                    android:layout_marginLeft="@dimen/margin_right_card_elements"
                    android:layout_weight="1"
                    android:textSize="15sp"

                    android:textStyle="bold"

                    />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/margin_left_card_elements"
                android:layout_marginLeft="@dimen/margin_left_card_elements"
                android:layout_marginTop="@dimen/margin_between_card_elements"
                android:orientation="horizontal"
                android:visibility="gone">

                <TextView
                    android:layout_width="@dimen/cardview_elements_width"

                    android:layout_height="wrap_content"
                    android:text="Mobile No. :"
                    android:textColor="@color/dark_gray"
                    android:textSize="15sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tv_mobile_no"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_right_card_elements"
                    android:layout_marginLeft="@dimen/margin_right_card_elements"
                    android:layout_weight="1"

                    android:textSize="15sp"

                    />

            </LinearLayout>


        </LinearLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>